{% extends 'base.html.twig' %}

{% block content %}
    <div id="fh5co-author">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <p class="animate-box"><img src="{{ picture.url }}" class="img-responsive"
                                                alt="Free HTML5 Template by FreeHTML5.co"></p>
                    <div class="row top-line animate-box">
                        <div class="col-md-6 col-md-offset-3 col-md-push-2 text-left fh5co-heading">
                            <h2>{{ picture.name }}</h2>
                            <p>{{ picture.description }}</p>
                        </div>
                    </div>
                    <div class="row row-pt-md portfolio-navigation">
                        <div class="col-xs-4 text-left">
                            <a href="{{ picture.id - 1 }}"
                               class="btn btn-primary btn-outline {% if picture.id == 1 %}disabled{% endif %}"><i
                                        class="icon-chevron-left"></i> Prev </a>
                        </div>
                        <div class="col-xs-4 text-center">
                            <a href="/works" class="btn btn-primary btn-outline"><i class="icon-grid2"></i> View All</a>
                        </div>
                        <div class="col-xs-4 text-right">
                            <a href="/picture/{{ picture.id + 1 }}"
                               class="btn btn-primary btn-outline {% if picture.id == (pictures|length - 1) %}disabled{% endif %}">Next
                                <i class="icon-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="fh5co-started">
        <div class="container">
            <div class="row animate-box">
                <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                    <h2>Get Started</h2>
                    <p>We create beautiful themes for your site behind the word mountains, far from the countries
                        Vokalia and Consonantia, there live the blind texts.</p>
                    <p><a href="#" class="btn btn-primary">Let's work together</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
